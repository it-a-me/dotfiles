// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "inline_completion_provider": "none"
  },
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "ollama",
      "model": "mistral-nemo:latest"
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "vim_mode": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "inlay_hints": {
    "enabled": true
  },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434"
    },
    "anthropic": {
      "api_url": "",
      "available_models": []
    },
    "openai": {
      "api_url": "",
      "available_models": []
    },
    "zed.dev": {
      "available_models": []
    }
  },
  "cursor_blink": false,
  "relative_line_numbers": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "autosave": "off",
  "use_autoclose": false,
  "auto_update": false
}
